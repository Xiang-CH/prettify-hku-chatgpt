{
  "manifest_version": 3,
  "name": "Prettify HKU ChatGPT",
  "version": "1.0",
  "description": "Make HKU ChatGPT usable again!",
  "permissions": ["scripting"],
  "host_permissions": ["https://chatgpt.hku.hk/*"],
  "content_scripts": [
    {
      "matches": ["https://chatgpt.hku.hk/*"],
      "js": ["content.js"],
      "css": ["style.css"]
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "prettify-hku-chatgpt@connect.hku.hk"
    }
  }
}